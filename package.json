{
  "name": "current",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:dry-run": "turbo run build --dry",
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:web": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:web:fix": "turbo run lint --filter=web -- --fix",
    "lint:docs:fix": "turbo run lint --filter=docs -- --fix",
    "format": "prettier --write --ignore-unknown \"**/*\"",
    "format:check": "prettier --check --ignore-unknown --debug-check \"**/*\"",
    "check-types": "turbo run check-types",
    "upgrade": "pnpm up --recursive",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-sort-imports": "^1.8.8",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
